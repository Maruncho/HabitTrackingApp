@model AddAdminFormModel

<main class="row">
  <div class="col-2"></div><!-- Empty space -->
  <div class="row col-8 g-5">
    <h4 class="mb-3">New Bad Habit</h4>
    <form method="post">
      <div class="form-group">
        <label asp-for=@Model.UserId>User UserId</label>
        <input asp-for=@Model.UserId class="form-control" />
        <span asp-validation-for=@Model.UserId class="text-danger"></span>
        <button class="w-100 btn btn-primary btn-lg" type="submit">Add New Admin</button>
      </div>
    </form>
  </div>
</main>
