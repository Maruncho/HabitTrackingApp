@model ChangeBGColorForm

<main class="row">
  <div class="col-2"></div><!-- Empty space -->
  <div class="row col-8 g-5">
    <h4 class="mb-3">Change Background Color</h4>
    <form method="post">
      <div class="form-group">
        <label asp-for=@Model.BGColor>Background Color</label>
        <input asp-for=@Model.BGColor class="form-control" />
        <span asp-validation-for=@Model.BGColor class="text-danger"></span>
        <button class="w-100 btn btn-primary btn-lg" type="submit">Change Background Color</button>
      </div>
    </form>
  </div>
</main>
