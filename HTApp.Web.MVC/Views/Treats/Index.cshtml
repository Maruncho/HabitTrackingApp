@model TreatModel[]

<div id="good-habits" class="row">
    <div class="row px-5 bg-dark text-light my-3 rounded-3">
      <div class="container-fluid py-4 row">
        <h1 class="fw-bold col-4">Treats</h1>
        <div class="col-8">
          <a asp-action="AddTreat" class="px-4 btn btn-lg btn-warning">Add New</a>
        </div>
      </div>
    </div>
    <div class="row mb-4 align-items-md-stretch g-3">
    @foreach(var t in Model)
    {
      <div class="col-md-6">
        <div class="h-100 p-4 text-white bg-dark rounded-3">
          <div class="d-flex flex-row justify-content-between">
            <h2>@t.Name</h2>
            <h2>@t.QuantityPerSession pcs.</h2>
          </div>
          <div class="d-flex flex-row justify-content-between">
              <h2>Price: </h2>
              <h2 class="text-success">@t.Price Credits</h2>
          </div>
          <div class="d-flex flex-row justify-content-around">
            <a asp-action="EditTreat" asp-route-id=@t.Id class="flex-grow-1 me-3 btn btn-warning">Edit</a> 
            <a asp-action="DeleteTreat" asp-route-id=@t.Id class="btn btn-outline-danger">Delete</a>
          </div>
        </div>
      </div>
    }
    </div>
</div>
