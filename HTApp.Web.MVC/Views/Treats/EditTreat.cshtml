@model TreatInputModel

<main class="row">
    <div class="col-2"></div><!-- Empty space -->
    <div class="row col-8 g-5">
        <h4 class="mb-3">Edit Treat</h4>
        <form method="post">
          <div class="row g-3">
            <div class="col-sm-12">
              <label asp-for=@Model.Name class="form-label">Name</label>
              <input asp-for=@Model.Name type="text" class="form-control" required>
              <span asp-validation-for=@Model.Name class="text-danger"></span>
            </div>

            <div class="col-sm-6">
              <label asp-for=@Model.Price class="form-label">Price</label>
              <input asp-for=@Model.Price type="number" class="form-control" required>
              <span asp-validation-for=@Model.Price class="text-danger"></span>
            </div>
            <div class="col-sm-6">
              <label asp-for=@Model.QuantityPerSession class="form-label">Pieces per Session</label>
              <input asp-for=@Model.QuantityPerSession type="number" class="form-control" required>
              <span asp-validation-for=@Model.QuantityPerSession class="text-danger"></span>
            </div>
            <button class="w-100 btn btn-primary btn-lg" type="submit">Save Changes</button>
            <a asp-action="Index" class="btn btn-warning">Go Back</a>
          </div>
        </form>
      </div>
  </main>
  <partial name="_ValidationScriptsPartial" />
