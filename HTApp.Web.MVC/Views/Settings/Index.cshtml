@model SettingsForm

<div class="row px-5 bg-dark text-light my-3 rounded-3">
  <div class="container-fluid py-4 row">
    <h1 class="fw-bold col-4">Settings</h1>
  </div>
</div>

@if(ViewData.TryGetValue("Success", out var message))
{
    <h2 class="text-success">@message</h2>
}

<form class="row" method="post">
  <div class="form-group col-6">
    <label asp-for=@Model.RefundsPerSession >Refund Per Session (Updates on next sesssion)</label>
    <input class="form-control" asp-for=@Model.RefundsPerSession type="number" />
    <span asp-validation-for=@Model.RefundsPerSession class="text-danger"></span>
  </div>
  <div class="row mt-5 d-flex justify-content-center">
    <button class="w-50 btn btn-primary btn-lg" type="submit">Save Changes</button>
  </div>
</form>
<partial name="_ValidationScriptsPartial" />
