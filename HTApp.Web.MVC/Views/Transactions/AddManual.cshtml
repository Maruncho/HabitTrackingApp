
@model TransactionAddManualFormModel

<main class="row">
    <div class="col-2"></div><!-- Empty space -->
    <div class="row col-8 g-5">
        <h4 class="mb-3">New Bad Habit</h4>
        <form method="post">
          <div class="row g-3">
            <div class="col-sm-12">
              <label asp-for=@Model.Amount class="form-label">Amount (can be negative)</label>
              <input asp-for=@Model.Amount type="number" class="form-control" required>
              <span asp-validation-for=@Model.Amount class="text-danger"></span>
            </div>

            <button class="w-100 btn btn-primary btn-lg" type="submit">Add Transaction</button>
            <a asp-action="Index" class="btn btn-warning">Go Back</a>

          </div>
        </form>
        @if (ViewData.ContainsKey("ErrorMessage"))
        {
            <p class="text-danger">@ViewData["ErrorMessage"]</p>
        }
      </div>
  </main>
  <partial name="_ValidationScriptsPartial" />
