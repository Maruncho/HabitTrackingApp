@model HabitsViewModel

<div id="good-habits" class="row">
    <div class="row px-5 bg-dark text-light my-3 rounded-3">
      <div class="container-fluid py-4 row">
        <h1 class="fw-bold col-4">Good Habits</h1>
        <div class="col-8">
          <a asp-action="AddGoodHabit" class="px-4 btn btn-lg btn-warning">Add New</a>
        </div>
      </div>
    </div>
    <div class="row mb-4 align-items-md-stretch g-3">
    @foreach(var gh in Model.GoodHabits)
    {
      <div class="col-md-6">
        <div class="h-100 p-4 text-white bg-dark rounded-3">
          <div class="d-flex flex-row justify-content-between">
            <h2>@gh.Name</h2>
            @if(gh.IsActive) {<h2 class="text-warning">Active</h2>} else {<h2 class="text-muted">Inactive</h2>}
          </div>
          <div class="d-flex flex-row justify-content-between">
              <h2>Credits: </h2>
              <h2 class="text-success">+ @gh.CreditsSuccess</h2>
              <h2 class="text-danger">- @gh.CreditsFail</h2>
          </div>
          <div class="d-flex flex-row justify-content-around">
            <a asp-action="EditGoodHabit" asp-route-id=@gh.Id class="flex-grow-1 me-3 btn btn-warning">Edit</a> 
            <a asp-action="DeleteGoodHabit" asp-route-id=@gh.Id class="btn btn-outline-danger">Delete</a>
          </div>
        </div>
      </div>
    }
    </div>
</div>

<div id="bad-habits" class="row">
    <div class="row px-5 bg-dark text-light my-3 rounded-3">
      <div class="container-fluid py-4 row">
        <h1 class="fw-bold col-4">Bad Habits</h1>
        <div class="col-8">
          <a asp-action="AddBadHabit" class="px-4 btn btn-lg btn-warning">Add New</a>
        </div>
      </div>
    </div>
    <div class="row mb-4 align-items-md-stretch g-3">
    @foreach(var bh in Model.BadHabits)
    {
      <div class="col-md-6">
        <div class="h-100 p-4 text-white bg-dark rounded-3">
          <div class="d-flex flex-row justify-content-between">
            <h2>@bh.Name</h2>
          </div>
          <div class="d-flex flex-row justify-content-between">
              <h2>Credits: </h2>
              <h2 class="text-success">+ @bh.CreditsSuccess</h2>
              <h2 class="text-danger">- @bh.CreditsFail</h2>
          </div>
          <div class="d-flex flex-row justify-content-around">
            <a asp-action="EditBadHabit" asp-route-id=@bh.Id class="flex-grow-1 me-3 btn btn-warning">Edit</a> 
            <a asp-action="DeleteBadHabit"asp-route-id=@bh.Id class="btn btn-outline-danger">Delete</a>
          </div>
        </div>
      </div>
    }
    </div>
</div>
