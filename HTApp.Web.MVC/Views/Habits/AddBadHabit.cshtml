@model BadHabitFormModel

<main class="row">
    <div class="col-2"></div><!-- Empty space -->
    <div class="row col-8 g-5">
        <h4 class="mb-3">New Bad Habit</h4>
        <form method="post">
          <div class="row g-3">
            <div class="col-sm-12">
              <label asp-for=@Model.Name class="form-label">Name</label>
              <input asp-for=@Model.Name type="text" class="form-control" required>
              <span asp-validation-for=@Model.Name class="text-danger"></span>
            </div>

            <div class="col-sm-6">
              <label asp-for=@Model.CreditsSuccess class="form-label">Credits Won From Completion</label>
              <input asp-for=@Model.CreditsSuccess type="number" class="form-control" required>
              <span asp-validation-for=@Model.CreditsSuccess class="text-danger"></span>
            </div>
            <div class="col-sm-6">
              <label asp-for=@Model.CreditsFail class="form-label">Credits Lost From Failure</label>
              <input asp-for=@Model.CreditsFail type="number" class="form-control" required>
              <span asp-validation-for=@Model.CreditsFail class="text-danger"></span>
            </div>
            <button class="w-100 btn btn-primary btn-lg" type="submit">Add to List</button>
            <a asp-action="Index" class="btn btn-warning">Go Back</a>
          </div>
        </form>
        @if (ViewData.ContainsKey("ErrorMessage"))
        {
            <p class="text-danger">@ViewData["ErrorMessage"]</p>
        }
      </div>
  </main>
  <partial name="_ValidationScriptsPartial" />
